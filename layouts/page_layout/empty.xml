<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <container name="root">
        <container name="after.body.start" before="-" label="Page Top"/>
        <container name="page.wrapper">
            <container name="global.notices" before="-"/>
            <container name="main.content" htmlTag="main" htmlClass="page-content">
                <container name="columns" htmlTag="div" htmlClass="wrapper">
                    <container name="main.wrapper" label="Main Content Wrapper" htmlTag="section" htmlId="content">
                        <container name="main.wrapper.cover" label="Main Content Wrapper Cover" htmlTag="div" htmlClass="container-fluid">
                            <container name="main" label="Main Content Container" />
                        </container>    
                    </container>
                </container>
            </container>
            <container name="page.bottom.container" label="Before Page Footer Container" after="main.content" htmlTag="div" htmlClass="page-bottom"/>
            <container name="before.body.end" after="-" label="Page Bottom"/>
        </container>
    </container>
</layout>
