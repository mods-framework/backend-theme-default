<?xml version="1.0"?>
<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <head>
       	<meta name="charset" content="utf-8"/>
		<meta name="x-ua-compatible" content="ie=edge"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link src="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
		<css src="theme.css" media="screen,projection"/>
		<css src="material-icons.css" media="screen,projection"/>		
        <css src="alter.css" media="screen,projection"/>
		<css src="style.css" media="screen,projection"/>
		<script src="jquery.js" />
        <script src="alert.js" />
		<script src="materialize.js" />
    </head>
    <body>
    	<referenceContainer name="header.container">
    		<block class="Mods\Backend\Block\Header" name="header" template="backend::header" />
    	</referenceContainer>
    	<referenceContainer name="sidebar.left">
    		<block class="Mods\Backend\Block\SidebarLeft" name="left.menu" template="backend::sidebar.left" />
    	</referenceContainer>
    	<referenceContainer name="footer.container">
    		<block class="Mods\Backend\Block\Footer" name="footer" template="backend::footer" />
    	</referenceContainer>

        <referenceContainer name="columns">
            <container name="messages.wrapper" before="main.wrapper">
                <container name="messages.wrapper.cover" label="Main Content Wrapper Cover" htmlTag="div" htmlClass="container">
                    <block class="Mods\Backend\Block\Messages" name="messages" template="backend::flash.messages" />
                </container>
            </container> 
        </referenceContainer>   

    </body>
</page>